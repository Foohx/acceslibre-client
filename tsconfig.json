{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"]
}
